[push]
	default = current
[core]
	editor = nvim
	excludesFile = /Users/stilljm/.config/git/ignore
[alias]
	root = !pwd
	co = checkout
	st = status -s
	last = log -1 HEAD --stat -c
	hist = log --no-merges --pretty='%C(yellow)%h%d %Creset%an %Cgreen%ar:%Creset %s' --graph
	rpo = remote prune origin
	unstage = reset HEAD --
	untrack = checkout --
[user]
	name = John Still
	email = john.m.still@vumc.org

# vim: ft=gitconfig noexpandtab
[pull]
	ff = only
